# Redirect all client-side routes to index.html for SPA behavior
/* /index.html 200

# Allow Netlify to serve all static files generated by Next.js from the .next directory
/_next/static/*  /app/.next/static/:splat  200
/_next/image/*   /app/.next/image/:splat   200
/_next/data/*    /app/.next/data/:splat    200

# Serve all assets from the public directory directly
/images/*        /images/:splat            200
/static/*        /static/:splat            200
/fonts/*         /fonts/:splat             200
/audio/*         /audio/:splat             200
/css/*           /css/:splat               200
/js/*            /js/:splat                200

# Catch-all for any API routes that should be handled by Next.js (if applicable)
/api/*           /api/:splat               200

# Fallback for any other routes not matched above
/* /index.html 200